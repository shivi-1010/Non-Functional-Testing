Vagrant.configure("2") do |config|
  # Configuration for 1st VM (Web-Server)
  config.vm.define "Web-Server" do |web|
    web.vm.box = "ubuntu/focal64"
    web.vm.hostname = "WebServer"
    web.vm.provider "virtualbox" do |vb|
      vb.cpus = 2
      vb.memory = "2048"
    end
    web.vm.network "private_network", ip: "192.168.33.20"
    web.vm.synced_folder "./Doctor-Appointment", "/var/www/html/", type: "virtualbox"
    web.vm.provision "shell", inline: <<-SHELL, run: "always"
     sudo apt update
     sudo apt install -y apache2 mysql-client
     sudo systemctl stop apache2
     sudo apt install lsb-release ca-certificates apt-transport-https software-properties-common -y   
     sudo add-apt-repository ppa:ondrej/php
     sudo apt install php8.0 -y
     sudo apt install -y php8.0-cli php8.0-common php8.0-mysql php8.0-zip php8.0-gd php8.0-mbstring php8.0-curl php8.0-xml php8.0-bcmath
     sudo systemctl start apache2
   SHELL
  end

  # Configuration for 2nd VM (DB-Server)
  config.vm.define "DB-Server" do |db|
    db.vm.box = "ubuntu/focal64"
    db.vm.hostname = "DBServer"
    db.vm.provider "virtualbox" do |vb|
      vb.cpus = 1
      vb.memory = "2048"
    end
    db.vm.network "private_network", ip: "192.168.33.30"
    db.vm.synced_folder "./DB-Shared", "/vagrant-db", type: "virtualbox"
    db.vm.synced_folder ".", "/vagrant", disabled: "true"
    db.vm.provision "shell", inline: <<-SHELL, run: "always" 
    sudo apt -y update
      # sudo debconf-set-selections <<< "mysql-server mysql-server/root_password password root"
      # sudo debconf-set-selections <<< "mysql-server mysql-server/root_password_again password root"
      sudo apt install -y mysql-server
      sudo mysql -u root  -e "CREATE DATABASE hospital"
      sudo mysql -u root  -e "CREATE USER 'root'@'192.168.33.20' IDENTIFIED BY 'root';"
      sudo mysql -u root  -e "GRANT CREATE, ALTER, DROP, INSERT, UPDATE, DELETE, SELECT, REFERENCES, RELOAD on *.* TO 'root'@'192.168.33.20' WITH GRANT OPTION;"
      sudo mysql -u root  -e "FLUSH PRIVILEGES;"
      sudo mysql -u root  hospital < /vagrant-db/hospital.sql

      sudo sed -i 's/^bind-address.*/bind-address = 0.0.0.0/' /etc/mysql/mysql.conf.d/mysqld.cnf
      sudo sed -i 's/^mysqlx-bind-address/#mysqlx-bind-address/' /etc/mysql/mysql.conf.d/mysqld.cnf
      sudo systemctl restart mysql
    SHELL
  end
end













